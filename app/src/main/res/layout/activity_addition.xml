<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdditionActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#020202">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/logo"
                            android:fontFamily="@font/virgo"
                            android:text="Let's solve "
                            android:textAlignment="center"
                            android:textColor="@color/textColor"
                            android:textSize="35dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/logo"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/virgo"
                            android:text="addition"
                            android:textAlignment="center"
                            android:textColor="@color/textColor"
                            android:textSize="35dp" />
                        <TextView
                            android:id="@+id/last"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/logo"
                            android:fontFamily="@font/virgo"
                            android:layout_marginTop="60dp"
                            android:text="problem!"
                            android:textAlignment="center"
                            android:textColor="@color/textColor"
                            android:textSize="35dp" />
                        <View
                            android:layout_below="@+id/last"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/textColor"
                            android:layout_margin="10dp"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="210dp"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="360dp"
                        android:elevation="8dp"
                        app:cardElevation="10dp"
                        app:cardPreventCornerOverlap="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/background">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="20dp"
                                android:gravity="right"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">
                                <Spinner
                                    android:id="@+id/spinner11"
                                    android:background="@drawable/spinnerback"
                                    android:layout_marginLeft="10dp"
                                    android:popupBackground="@color/textColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <Spinner
                                    android:id="@+id/spinner12"
                                    android:background="@drawable/spinnerback"
                                    android:layout_marginLeft="10dp"
                                    android:popupBackground="@color/textColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <Spinner
                                    android:id="@+id/spinner13"
                                    android:background="@drawable/spinnerback"
                                    android:layout_marginLeft="10dp"
                                    android:popupBackground="@color/textColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <Spinner
                                    android:id="@+id/spinner14"
                                    android:background="@drawable/spinnerback"
                                    android:layout_marginLeft="10dp"
                                    android:popupBackground="@color/textColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="80dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/iconsplus"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="20dp"
                                android:gravity="right"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">
                                <Spinner
                                    android:id="@+id/spinner21"
                                    android:background="@drawable/spinnerback"
                                    android:layout_marginLeft="10dp"
                                    android:popupBackground="@color/textColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <Spinner
                                    android:background="@drawable/spinnerback"
                                    android:layout_marginLeft="10dp"
                                    android:popupBackground="@color/textColor"
                                    android:id="@+id/spinner22"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <Spinner
                                    android:background="@drawable/spinnerback"
                                    android:layout_marginLeft="10dp"
                                    android:popupBackground="@color/textColor"
                                    android:id="@+id/spinner23"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <Spinner
                                    android:background="@drawable/spinnerback"
                                    android:layout_marginLeft="10dp"
                                    android:popupBackground="@color/textColor"
                                    android:id="@+id/spinner24"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="#ffff"
                                android:layout_margin="10dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="20dp"
                                android:gravity="right"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">
                                <Spinner
                                    android:background="@drawable/spinnerback"
                                    android:layout_marginLeft="10dp"
                                    android:popupBackground="@color/textColor"
                                    android:id="@+id/spinner31"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <Spinner
                                    android:background="@drawable/spinnerback"
                                    android:layout_marginLeft="10dp"
                                    android:popupBackground="@color/textColor"
                                    android:id="@+id/spinner32"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <Spinner

                                    android:background="@drawable/spinnerback"
                                    android:layout_marginLeft="10dp"
                                    android:popupBackground="@color/textColor"
                                    android:id="@+id/spinner33"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <Spinner
                                    android:background="@drawable/spinnerback"
                                    android:layout_marginLeft="10dp"
                                    android:popupBackground="@color/textColor"
                                    android:id="@+id/spinner34"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <Spinner
                                    android:background="@drawable/spinnerback"
                                    android:layout_marginLeft="10dp"
                                    android:popupBackground="@color/textColor"
                                    android:id="@+id/spinner35"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <Button
                                    android:id="@+id/addButton"
                                    android:layout_width="100dp"
                                    android:layout_height="50dp"
                                    android:text="Solve"
                                    android:textSize="24dp"
                                    android:fontFamily="@font/virgo"
                                    android:textColor="@color/textColor"
                                    android:layout_marginTop="10dp"
                                    android:elevation="8dp"

                                    android:background="@drawable/buttonback"/>
                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>